<configuration>
  <contextName>Proline MascotParser Test</contextName>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <!-- encoders are assigned the type
         ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
    <encoder>
       <pattern>%-5level: [%thread] +%-4relative ms  %date{dd MMM yyyy - HH:mm:ss.SSS} %logger{35} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="fr.proline" level="DEBUG" />

  <!-- For matrixscience.NativeLibrariesLoader -->
  <logger name="matrixscience" level="DEBUG" />

  <root level="WARN">
    <appender-ref ref="STDOUT" />
  </root>

</configuration>
