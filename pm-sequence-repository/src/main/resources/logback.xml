<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
  <contextName>Proline Sequence Repository</contextName>


  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%-5level: [%thread] +%-4relative ms  %date{dd MMM yyyy - HH:mm:ss.SSS} %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>


  <appender name="fileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <append>true</append>

    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level>INFO</level>
    </filter>

   <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>logs/sequence_repository_log_%d{yyyy-MM-dd}.txt</fileNamePattern>
      <totalSizeCap>2GB</totalSizeCap>
    </rollingPolicy>


    <encoder>
      <!-- TTCCLayout -->
      <pattern>%date{dd MMM yyyy HH:mm:ss.SSS} [%thread] %-5level %logger{36} %mdc - %msg%n</pattern>
    </encoder>

  </appender>


  <appender name="debugFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <append>true</append>

    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <fileNamePattern>logs/sequence_repository_debug_%d{yyyy-MM-dd}.%i.txt</fileNamePattern>
       <maxFileSize>100MB</maxFileSize>
       <totalSizeCap>2GB</totalSizeCap>
    </rollingPolicy>

    <encoder>
      <!-- TTCCLayout -->
      <pattern>%date{dd MMM yyyy HH:mm:ss.SSS} [%thread] %-5level %logger{36} %mdc - %msg%n</pattern>
    </encoder>

  </appender>

  <logger name="fr.proline" level="DEBUG" />

  <root level="WARN">
    <appender-ref ref="STDOUT" /> 
    <appender-ref ref="debugFileAppender" />
    <appender-ref ref="fileAppender" />
  </root>

</configuration>
