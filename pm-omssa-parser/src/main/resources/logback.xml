<configuration>
 <contextName>Proline OmssaParser</contextName>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <!-- encoders are assigned the type
         ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
    <encoder>
      <pattern>%-5level: [%thread] %date{dd MMM yyyy - HH:mm:ss.SSS} %logger{35} - %msg%n</pattern>
    </encoder>
  </appender>
  
   <appender name="Fappender" class="ch.qos.logback.core.FileAppender">
      <file>PM_OmssaParser-${user.name}.log</file>
      <append>true</append>
      <encoder>
        <pattern>%-5level: [%thread] %date{dd MMM yyyy - HH:mm:ss.SSS} %logger{35} - %msg%n</pattern>
      </encoder>        
  </appender>

  <logger name="fr.proline.module" level="INFO">
    <appender-ref ref="Fappender" />    
  </logger>

  <root level="OFF">
      <appender-ref ref="STDOUT" />      
  </root>
  
</configuration>